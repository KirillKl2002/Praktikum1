X = int(X)
Y = int(Y)
Z = int(Z)

if (X > Y and X > Z) and (X**2 = Y**2 + Z**2):
    print("Существует и прямоугольный")
elif (Y > X and Y > Z) and (Y ** 2 = X ** 2 + Z ** 2):
    print("Существует и прямоугольный")
elif (Z > Y and Z > X) and (Z ** 2 = Y ** 2 + X ** 2):
    print("Существует и прямоугольный")
else:
    print("Существует но не прямоугольный")
